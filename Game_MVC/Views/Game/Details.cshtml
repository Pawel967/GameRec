@model Game_MVC.Models.GameViewModel

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.HeaderImage" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.ShortDescription</p>

            <div class="my-3">
                <span class="badge badge-primary">@Model.Type</span>
                @if (Model.Genres != null)
                {
                    foreach (var genre in Model.Genres)
                    {
                        <span class="badge badge-secondary">@genre</span>
                    }
                }
            </div>

            <h4>
                Price:
                @if (Model.IsFree)
                {
                    <span class="text-success">Free</span>
                }
                else if (Model.PriceOverview != null)
                {
                    <span class="text-danger">@((Model.PriceOverview.Final / 100.0).ToString("0.00")) PLN</span>
                    @if (Model.PriceOverview.DiscountPercent > 0)
                    {
                        <small class="text-muted"><del>USD @((Model.PriceOverview.Initial / 100.0).ToString("0.00"))</del></small>
                        <span class="badge badge-warning ml-2">-@Model.PriceOverview.DiscountPercent%</span>
                    }
                }
            </h4>

            <p>Released: @Model.ReleaseDate</p>

            <div class="mt-4">
                <h5>Developers:</h5>
                @if (Model.Developers != null)
                {
                    foreach (var developer in Model.Developers)
                    {
                        <p>@developer</p>
                    }
                }

                <h5>Publishers:</h5>
                @if (Model.Publishers != null)
                {
                    foreach (var publisher in Model.Publishers)
                    {
                        <p>@publisher</p>
                    }
                }
            </div>

            @if (Model.UserRating.HasValue)
            {
                <div class="mt-3">
                    <strong>User Rating:</strong> <span class="badge badge-info">@Model.UserRating.Value.ToString("0.0")/10</span>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
