<div id="notificationArea"></div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center mb-0">Account Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4 text-muted"><i class="fas fa-user me-2"></i>Username:</dt>
                            <dd class="col-sm-8">@Model.Username</dd>

                            <dt class="col-sm-4 text-muted"><i class="fas fa-envelope me-2"></i>Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4 text-muted"><i class="fas fa-users me-2"></i>Roles:</dt>
                            <dd class="col-sm-8">
                                @foreach (var role in Model.Roles)
                                {
                                    <span class="badge bg-secondary me-1">@role</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-4 d-flex align-items-center justify-content-md-end mt-3 mt-md-0">
                        <button onclick="openEditModal()" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit Account
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserModalLabel">Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal() {
            $('#editUserModal .modal-body').load('@Url.Action("Edit", "UserAccount")', function () {
                $('#editUserModal').modal('show');
            });
        }

        $(document).ready(function () {
            $('.btn-close').click(function () {
                $('#editUserModal').modal('hide');
            });

            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                showNotification(successMessage, 'success');
            }
        });

        function showNotification(message, type) {
            var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            var notification = `
                        <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                            ${message}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    `;
            $('#notificationArea').html(notification);

            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
}